<h1>New Product Form</h1>
<div class="container">
  <form class='form' action="<%= products_url %>" method="post">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

    <div class="form-group row">
      <label for="new-product-name" class="col-sm-2 col-form-label">Product Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="new-product-name" name="product[name]" placeholder="Product Name">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-product-price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10">
        <input type="decimal" class="form-control" id="new-product-price" name="product[price]" placeholder="Price">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-product-color" class="col-sm-2 col-form-label">Color</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="new-product-color" name="product[color]" placeholder="Color (Optional)">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-product-style" class="col-sm-2 col-form-label">Style</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="new-product-style" name="product[style]" placeholder="Style (Optional)">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-product-description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="new-product-description" name="product[description]" placeholder="Description">
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>